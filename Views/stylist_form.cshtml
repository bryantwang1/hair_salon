@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Add a Stylist</h1>


<form action="/stylists/new/" method="post">
    <div class="form-group">
        <label for="stylist-name">Name: </label>
        <input type="text" name="stylist-name" id="stylist-name" placeholder="Alice" required autofocus>
    </div>
    <div class="form-group">
        <label for="stylist-phone">Phone: </label>
        <input type="text" name="stylist-phone" id="stylist-phone" placeholder="(555)555-5555" pattern="\(\d{3}\)\d{3}-\d{4}" title="Please match the format: (###)###-####" required>
    </div>
    <div class="form-group">
        <label for="stylist-description">Description: </label>
        <input type="text" name="stylist-description" id="stylist-description" placeholder="Works fast, positive feedback from clients." required>
    </div>
    <button type="submit" class="btn btn-default">Add Stylist</button>
</form>

<div class="footer-links">
    <h4><a href="/">Click here to return to the homepage without adding a stylist.</a></h4>
</div>
