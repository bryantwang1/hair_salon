@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Delete a client</h1>

<h2>Are you sure you want to delete this client?</h2>
<h3>Name: @Model["client"].GetName()</h3>
<h4>Description: @Model["client"].GetDescription()</h4>
<h4>Stylist: @Model["stylist"].GetName()</h4>

<form action="/client/delete/@Model["client"].GetId()" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <h4>Do not press this button more than once: </h4>
  <button type="submit" class="btn btn-warning">Delete Client</button>
</form>

<div class="footer-links">
    <h4><a href="/">Click here to return to the homepage.</a></h4>
</div>
